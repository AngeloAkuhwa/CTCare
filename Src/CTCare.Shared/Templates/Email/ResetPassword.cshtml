@model dynamic
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>Reset Your CTCare Password</title>
</head>
<body style="margin:0;padding:0;background:#f4f8fb;font-family:'Segoe UI',sans-serif;">
	<table width="100%" cellpadding="0" cellspacing="0" role="presentation">
		<tr>
			<td align="center" style="padding:30px 0;">
				<table width="600" cellpadding="0" cellspacing="0" role="presentation"
							 style="background:#ffffff;border-radius:10px;box-shadow:0 2px 8px rgba(0,0,0,0.05);overflow:hidden;">
					<tr>
						<td style="background:#0078D4;padding:25px;text-align:center;">
							<h1 style="margin:0;font-size:24px;color:#ffffff;">Reset Your Password</h1>
						</td>
					</tr>

					<tr>
						<td style="padding:30px;">
							<p style="font-size:16px;color:#333;margin:0 0 15px;">
								Hi <strong>@Model.Name</strong>,
							</p>
							<p style="font-size:16px;color:#333;margin:0 0 20px;">
								We received a request to reset your CTCare account password.
							</p>

							<p style="text-align:center;margin:30px 0;">
								<a href="@Model.Url"
									 style="background:#0078D4;color:#fff;text-decoration:none;padding:14px 28px;
                          border-radius:5px;font-size:16px;font-weight:bold;display:inline-block;">
									Reset Password
								</a>
							</p>

							<p style="font-size:14px;color:#555;line-height:1.5;margin:0 0 15px;">
								If the button doesn't work, you can copy and paste the link below into your browser:
							</p>
							<p style="font-size:14px;color:#0078D4;word-break:break-all;margin:0 0 25px;">
								<a href="@Model.Url" style="color:#0078D4;text-decoration:none;">@Model.Url</a>
							</p>

							<p style="font-size:15px;color:#333;margin:0;">
								If you didn’t request this, please ignore this email or contact support.
							</p>
						</td>
					</tr>

					<tr>
						<td style="background:#f0f0f0;text-align:center;padding:20px;font-size:12px;color:#777;">
							&copy; @DateTime.UtcNow.Year CTCare. All rights reserved.<br />
							<a href="https://CTCare.com/terms" style="color:#555;text-decoration:underline;">Terms of Service</a> |
							<a href="https://CTCare.com/privacy" style="color:#555;text-decoration:underline;">Privacy Policy</a><br />
							Follow us:
							<a href="https://twitter.com/CTCare" style="color:#1DA1F2;text-decoration:none;">Twitter</a> •
							<a href="https://facebook.com/CTCare" style="color:#1877F2;text-decoration:none;">Facebook</a> •
							<a href="https://instagram.com/CTCare" style="color:#E4405F;text-decoration:none;">Instagram</a>
						</td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
</body>
</html>
